<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/horizontalSlider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:orientation="horizontal">

    </android.support.v7.widget.RecyclerView>

    <View
        android:id="@+id/pane_background"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:alpha="0.25"
        android:background="@drawable/background_dark"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chevronClick"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/chevronStates"
        android:rotation="270"
        android:src="@drawable/ic_chevron_right_black_24dp"
        android:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/spacer"
        android:layout_width="48dp"
        android:layout_height="0px"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:clickable="false"
        android:focusable="false"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/soundsTextMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:text="@string/sounds"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/pane_background"
        app:layout_constraintEnd_toEndOf="@id/pane_background"
        app:layout_constraintStart_toStartOf="@id/pane_background"
        app:layout_constraintTop_toTopOf="@id/pane_background" />

    <TextView
        android:id="@+id/songTitleMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="@string/song_title"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/spacer"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@id/chevronClick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017" />

    <TextView
        android:id="@+id/songDurationMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="@string/playing_all_night"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/spacer"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toEndOf="@id/chevronClick"
        app:layout_constraintTop_toBottomOf="@id/songTitleMain" />

    <ImageView
        android:id="@+id/previousMain"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:alpha="0"
        android:contentDescription="@string/previous"
        android:onClick="changeSong"
        android:src="@drawable/ic_chevron_left_black_24dp"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/playButtonMain"
        app:layout_constraintEnd_toStartOf="@id/playButtonMain"
        app:layout_constraintTop_toTopOf="@id/playButtonMain"
        app:layout_constraintVertical_bias="0.7" />

    <ImageView
        android:id="@+id/playButtonMain"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/play"
        android:onClick="swapPlayPause"
        android:src="@drawable/ic_play_arrow_black_24dp"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/seekbarLayoutMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />

    <ImageView
        android:id="@+id/nextMain"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:alpha="0"
        android:contentDescription="@string/next"
        android:onClick="changeSong"
        android:src="@drawable/ic_chevron_right_black_24dp"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/playButtonMain"
        app:layout_constraintStart_toEndOf="@id/playButtonMain"
        app:layout_constraintTop_toTopOf="@id/playButtonMain"
        app:layout_constraintVertical_bias="0.7" />

    <LinearLayout
        android:id="@+id/seekbarLayoutMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/background"
            android:contentDescription="@string/volume_indicator"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_volume_up_black_24dp" />

            <android.support.v7.widget.AppCompatSeekBar
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="16dp"
                android:paddingTop="16dp" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>