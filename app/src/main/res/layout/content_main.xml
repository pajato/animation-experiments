<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainContentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/the_main_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/animStyleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/smoother"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/animTextLabel" />

    <TextView
        android:id="@+id/animTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animating Drawer Using Strategy: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainContentText" />

    <Button
        android:id="@+id/stutterAnimButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changeState"
        android:text="@string/as_spec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/smoothAnimButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changeState"
        android:text="@string/smoother"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>