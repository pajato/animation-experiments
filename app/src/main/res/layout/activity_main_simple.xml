<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pajato.drawerreplacement.MainActivity">

    <Button
        android:id="@+id/animationTrigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/songImageMain"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_image_black_24dp"
        android:tint="@android:color/holo_green_dark"
        android:transitionName="backgroundTransition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/songTitleMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingBottom="2dp"
        android:text="Song Title"
        android:textSize="16sp"
        android:transitionName="textTransition"
        app:layout_constraintBottom_toBottomOf="@id/songImageMain"
        app:layout_constraintLeft_toRightOf="@id/songImageMain"
        app:layout_constraintTop_toTopOf="@id/songImageMain" />

    <ImageView
        android:id="@+id/playButtonMain"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="20dp"
        android:onClick="transitionActivity"
        android:src="@drawable/ic_play_arrow_black_24dp"
        android:transitionName="slidePlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
